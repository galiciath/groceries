<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onPageLoaded" actionBarHidden="true">
    <StackLayout>
        <StackLayout id="stack-logo">
            <Image src="res://groceries_logo" stretch="fill"/>
            <Label text="Boodschappenlijstje" fontSize="20" class="roboto-medium" textWrap="true"/>
        </StackLayout>
        
        <StackLayout id="stack-buttons">
            <Button class="btn" tap="onBtnNewTap">
                <FormattedString>
                    <Span text="&#43;&#x000a;" fontSize="30"/>
                    <Span text="Nieuw" fontSize="14" class="roboto-medium"/>
                </FormattedString>
            </Button>

            <Button class="btn" tap="onBtnListsTap">
                <FormattedString>
                    <Span text="&#9776;&#x000a;" fontSize="30"/>
                    <Span text="Lijstjes" fontSize="14" class="roboto-medium"/>
                </FormattedString>
            </Button>
        </StackLayout>
    </StackLayout>     
</Page>